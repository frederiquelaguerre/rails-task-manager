<h2><%= @task.title %></h2>
<div class="d-grid gap-2 d-md-flex justify-content-md-end mb-3">
  <%= link_to "Edit task", edit_task_path, class: "btn btn-outline-secondary btn-sm"%>
</div>
<div class="card">
  <p class="card-body"> <%= @task.details %></p>
</div>
<br>
<div class="mb-1" >
  <%= check_box_tag @task.id, @task.id, @task.completed, class: 'form-check-input ' %> Completed
</div>
<br>

<div class="border-top pt-1">
  <br>
  <i class="fa-solid fa-trash"></i> <%= link_to "Delete task", task_path(@task),
        data: {turbo_method: "delete", turbo_confirm: "Are you sure?"}
    %>
  <br>
  <i class="fa-solid fa-rotate-left"></i> <%= link_to "back to list", tasks_path%>
</div>

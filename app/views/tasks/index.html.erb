<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li class="form-check">
      <%= check_box_tag task.id, task.id, task.completed, disabled: true, class: 'form-check-input' %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>

<br>
<i class="fa-solid fa-plus"></i> <%= link_to "Add a new task", new_task_path %>

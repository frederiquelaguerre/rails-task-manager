<%= form_with model: task do  |f| %>
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details, class: "form-label" %>
  <%= f.text_field :details, class: "form-control" %>

  <%= f.submit class: "btn btn-primary mt-3" %>
  <br>
  <%= f.check_box :completed, class: 'form-check-input ' %> Completed
  <br>
<i class="fa-solid fa-rotate-left mt-3"></i> <%= link_to "Back to list", tasks_path%>
<% end %>
